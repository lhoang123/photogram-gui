    <h1> Photo Details </h1>

  <dl>
  <dt>
    Image
  </dt>

  <dd>
    <img src="<%= @the_photo.image %>" style="width:250px;">
  </dd>


  <dt>
    Caption
  </dt>

  <dd>
    <%= @the_photo.caption %>
  </dd>

  <dt>
    Owner
  </dt>

  <dd>
    <%= User.where({ :id => @the_photo.owner_id }).at(0).username %>
  </dd>

  <dt>
    Posted
  </dt>

  <dd>
    <%= @the_photo.created_at %>
  </dd>

  <dt>
    Edit photo
  </dt>

  <dd>
    <form action="/update_photo/117" method="post">
      <label for="browser_input">Image</label>
      <input id="browser_input" type="text" name="input_image" ">

      <label for="browser_caption">Caption</label>
      <textarea id="browser_caption" name="input_caption"></textarea>

      <label for="browser_user_id">Owner ID</label>
      <input id="browser_user_id" type="text" name="input_owner_id" >

      <button>Update photo</button>
    </form>
  </dd>
</dl>

<h2>Comments</h2>

<table border="1">
  <tr>
    <th>
     Commenters
    </th>

    <th>
     Comment
    </th>

    <th>
      Posted
    </th>
  </tr>

  <% @the_photo.comments.each do |a_comment| %>
    <tr>
      <td>
      <%= User.where({ :id => a_comment.author_id }).at(0).username %>
      </td>

      <td>
      <%= a_comment.body %>
      </td>

      <td>
        <%= a_comment.created_at %>
      </td>
    </tr>
  <% end %>
</table>
